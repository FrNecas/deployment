---
apiVersion: v1
kind: Secret
metadata:
  name: packit-secrets
type: Opaque
data:
  # *.packit.dev TLS certs
  privkey.pem: "{{ lookup('file', '{{ path_to_secrets }}/privkey.pem') | b64encode }}"
  fullchain.pem: "{{ lookup('file', '{{ path_to_secrets }}/fullchain.pem') | b64encode }}"
{% if service == 'packit' %}
  fedora.keytab: "{{ lookup('file', '{{ path_to_secrets }}/fedora.keytab') | b64encode }}"
{% endif %}
